import numpy as np
import matplotlib.pyplot as plt
from ipywidgets import interact, FloatSlider, VBox, HBox
import warnings
warnings.filterwarnings('ignore')

def love_os_simulation(omega=0.6, K0=0.5, Rc=0.9, c=0.8):
    """
    Love-OS Non-linear Dynamics Simulator
    Integrates Hopf normal form (Virtual/Phase) with Landau Free Energy (Reality)
    """
    # Fixed System Parameters
    T = 200.0          # Total time
    dt = 0.05          # Time step
    mu0 = -0.2         # Initial generation capacity (below threshold)
    ramp = 0.004       # Linear growth of capacity over time
    beta = 0.6         # Amplitude self-saturation
    gamma = 0.3        # Amplitude-to-phase coupling
    theta0 = np.pi     # The North Star (Absolute alignment)
    alpha = 1.0        # Landau parameter
    b = 1.0            # Landau parameter

    # Time array and storage
    n = int(T / dt)
    Ts = np.linspace(0, T, n + 1)
    
    R_hist = np.zeros(n + 1)
    th_hist = np.zeros(n + 1)
    X_hist = np.zeros(n + 1)
    Z_hist = np.zeros(n + 1)

    # Initial States
    state = np.array([0.05, 0.0, 0.0]) # [R, theta, X]
    
    # RK4 Integration Function
    def deriv(state, t):
        R, th, X = state
        mu = mu0 + ramp * t
        
        # Virtual Side: Amplitude and Phase (Hopf)
        dR = mu * R - beta * R**3
        K = K0 * R
        dth = omega - gamma * R**2 - K * np.sin(th - theta0)
        
        # Real Side: Reality Emergence (Landau)
        aR = alpha * (Rc - R)
        dX = -(aR * X + b * X**3) - c * np.sin(th - theta0)
        
        return np.array([dR, dth, dX])

    # Main Loop
    for i, t in enumerate(Ts):
        R_hist[i], th_hist[i], X_hist[i] = state
        Z_hist[i] = np.abs(np.exp(1j * state[1]) + 1) # Zero-Resistance Metric
        
        if i == n: break
            
        # Runge-Kutta 4th Order
        k1 = deriv(state, t)
        k2 = deriv(state + 0.5 * dt * k1, t + 0.5 * dt)
        k3 = deriv(state + 0.5 * dt * k2, t + 0.5 * dt)
        k4 = deriv(state + dt * k3, t + dt)
        state = state + (dt / 6.0) * (k1 + 2 * k2 + 2 * k3 + k4)
        
        # Wrap phase to (-pi, pi] for visual stability
        state[1] = np.angle(np.exp(1j * state[1]))

    # Identify Phase Lock Event
    K_array = K0 * R_hist
    lock_condition = np.abs(omega) <= K_array
    idx_lock = np.argmax(lock_condition) if np.any(lock_condition) else None

    # Identify Reality Creation Event (R crosses Rc)
    idx_Rc = np.argmax(R_hist >= Rc) if np.any(R_hist >= Rc) else None

    # --- Plotting ---
    plt.style.use('seaborn-v0_8-darkgrid')
    fig, axes = plt.subplots(3, 1, figsize=(12, 10), sharex=True)

    # 1. Virtual Accumulation (R)
    axes[0].plot(Ts, R_hist, label='R(t) : Internal Accumulation (Virtual)', color='blue')
    axes[0].axhline(Rc, color='purple', ls='--', lw=1.5, label='Rc : Reality Threshold')
    if idx_Rc and idx_Rc > 0:
        axes[0].axvline(Ts[idx_Rc], color='purple', ls=':', lw=1)
        axes[0].annotate('Threshold Breached', xy=(Ts[idx_Rc], Rc), xytext=(Ts[idx_Rc]+5, Rc+0.15),
                         arrowprops=dict(arrowstyle='->', color='purple'))
    axes[0].set_ylabel('Internal Energy (R)')
    axes[0].set_title('Phase 1: Invisible Accumulation')
    axes[0].legend(loc='upper left')

    # 2. Reality Emergence (X)
    axes[1].plot(Ts, X_hist, label='X(t) : Visible Reality', color='teal')
    axes[1].axhline(0, color='black', lw=1)
    axes[1].set_ylabel('Reality Order (X)')
    axes[1].set_title('Phase 2: Spontaneous Reality Generation')
    axes[1].legend(loc='upper left')

    # 3. Phase Alignment and Resistance (Theta & Z)
    axes[2].plot(Ts, th_hist, label='Theta(t) : Trajectory/Phase', color='steelblue')
    axes[2].plot(Ts, Z_hist, label='Z(t) : Friction/Resistance Metric', color='darkorange')
    axes[2].axhline(np.pi, color='gray', ls='--', lw=1, label='North Star (Absolute Alignment)')
    axes[2].axhline(0, color='black', lw=1)
    if idx_lock and idx_lock > 0:
        axes[2].axvline(Ts[idx_lock], color='green', ls='--', lw=1.5)
        axes[2].annotate('PHASE LOCK (Zero Resistance)', xy=(Ts[idx_lock], th_hist[idx_lock]),
                         xytext=(Ts[idx_lock]+5, th_hist[idx_lock]-1.5),
                         arrowprops=dict(arrowstyle='->', color='green'))
    axes[2].set_xlabel('Time')
    axes[2].set_ylabel('Phase / Resistance')
    axes[2].set_title('Phase 3: Trajectory Lock & The End of Wavering')
    axes[2].legend(loc='upper right')

    plt.tight_layout()
    plt.show()

# --- Interactive GUI Setup ---
interactive_plot = interact(
    love_os_simulation,
    omega=FloatSlider(value=0.6, min=0.1, max=1.5, step=0.1, description='Old Gravity (Ï‰):', style={'description_width': 'initial'}),
    K0=FloatSlider(value=0.5, min=0.1, max=1.5, step=0.1, description='Love Gain (K0):', style={'description_width': 'initial'}),
    Rc=FloatSlider(value=0.9, min=0.5, max=1.5, step=0.1, description='Threshold (Rc):', style={'description_width': 'initial'}),
    c=FloatSlider(value=0.8, min=0.1, max=2.0, step=0.1, description='Translation Rate (c):', style={'description_width': 'initial'})
)
