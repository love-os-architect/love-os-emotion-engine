import numpy as np
import matplotlib.pyplot as plt
from ipywidgets import VBox, HBox, Button, FloatSlider, HTML, Output, Layout
from IPython.display import display, clear_output

# Global Plot Settings
plt.rcParams['figure.dpi'] = 140
plt.style.use('seaborn-v0_8-darkgrid')

def simulate_love_os(T=200.0, dt=0.02, 
                     omega=0.6, mu0=-0.2, ramp=0.004, beta=0.6, gamma=0.3,
                     theta0=np.pi, K0=0.5,
                     alpha=1.0, Rc=0.9, b=1.0, c=0.8,
                     R0=0.05, th0=0.0, X0=0.0,
                     sigma=0.0,
                     pulse_times=None, pulse_phi=np.pi/6):
    
    if pulse_times is None:
        pulse_times = []
    pulse_times = sorted(list(set([t for t in pulse_times if 0.0 <= t <= T])))

    Ts = np.arange(0.0, T+dt, dt)
    n = len(Ts)
    
    R_hist, th_hist, X_hist, Z_hist = np.zeros(n), np.zeros(n), np.zeros(n), np.zeros(n)
    mu_hist, K_hist, a_hist = np.zeros(n), np.zeros(n), np.zeros(n)
    lock_hist = np.zeros(n, dtype=bool)

    state = np.array([R0, th0, X0], dtype=float)

    pulse_idx = [int(round(t/dt)) for t in pulse_times]
    pulse_set = set([i for i in pulse_idx if 0 <= i < n])

    def deriv(st, t):
        R, th, X = st
        mu = mu0 + ramp * t
        dR = mu * R - beta * (R**3)
        K = K0 * R
        dth = omega - gamma * (R**2) - K * np.sin(th - theta0)
        aR = alpha * (Rc - R)
        dX = -(aR * X + b * (X**3)) - c * np.sin(th - theta0)
        return np.array([dR, dth, dX])

    for i, t in enumerate(Ts):
        # Inject Delta v (Pulse)
        if i in pulse_set:
            state[1] += pulse_phi
            
        R_hist[i], th_hist[i], X_hist[i] = state
        mu_hist[i] = mu0 + ramp * t
        K_hist[i] = K0 * state[0]
        Z_hist[i] = np.abs(np.exp(1j * state[1]) + 1)
        a_hist[i] = alpha * (Rc - state[0])
        lock_hist[i] = (abs(omega) <= K_hist[i])
        
        if i == n - 1:
            break
            
        # RK4 Integration
        k1 = deriv(state, t)
        k2 = deriv(state + 0.5 * dt * k1, t + 0.5 * dt)
        k3 = deriv(state + 0.5 * dt * k2, t + 0.5 * dt)
        k4 = deriv(state + dt * k3, t + dt)
        state = state + (dt / 6.0) * (k1 + 2 * k2 + 2 * k3 + k4)
        
        # Add Gaussian Noise
        if sigma > 0:
            state[1] += sigma * np.sqrt(dt) * np.random.randn()
            
        # Wrap phase to (-pi, pi]
        state[1] = np.angle(np.exp(1j * state[1]))

    idx_mu = np.argmax(mu_hist >= 0) if np.any(mu_hist >= 0) else None
    idx_Rc = np.argmax(R_hist >= Rc) if np.any(R_hist >= Rc) else None
    idx_lock = np.argmax(lock_hist) if np.any(lock_hist) else None

    return {
        'Ts': Ts, 'R': R_hist, 'th': th_hist, 'X': X_hist, 'Z': Z_hist,
        'mu': mu_hist, 'K': K_hist, 'a': a_hist, 'lock': lock_hist,
        'idx_mu': idx_mu, 'idx_Rc': idx_Rc, 'idx_lock': idx_lock,
    }

def plot_all(res, Rc, omega, pulse_times, theta0=np.pi):
    Ts = res['Ts']
    R, th, X, Z = res['R'], res['th'], res['X'], res['Z']
    
    fig, axes = plt.subplots(4, 1, figsize=(11, 13), sharex=True)

    # 1. Virtual Accumulation (R)
    axes[1].plot(Ts, R, label='R = |A| (Virtual Accumulation)', color='blue')
    axes[1].axhline(Rc, color='purple', ls='--', lw=1, label='Rc (Reality Threshold)')
    if res['idx_Rc'] not in (None, 0):
        axes[1].axvline(Ts[res['idx_Rc']], color='purple', ls=':', lw=1)
        axes[1].annotate('Threshold Breached', xy=(Ts[res['idx_Rc']], Rc), xytext=(Ts[res['idx_Rc']]+5, Rc+0.1),
                         arrowprops=dict(arrowstyle='->'))
    axes[1].set_ylabel('Internal Energy (R)')
    axes[1].legend(loc='upper left')

    # 2. Reality Emergence (X)
    axes[2].plot(Ts, X, label='X (Visible Reality Order)', color='teal')
    axes[2].axhline(0, color='k', lw=1)
    axes[2].set_ylabel('Reality Order (X)')
    axes[2].legend(loc='upper left')

    # 3. Phase & Resistance (Theta & Z)
    axes[3].plot(Ts, th, label='Theta (Phase/Trajectory)', color='steelblue')
    axes[3].plot(Ts, Z, label='Z (Friction/Resistance Metric)', color='darkorange')
    axes[3].axhline(np.pi, color='gray', ls='--', lw=1, label='North Star (True Alignment)')
    axes[3].axhline(0, color='k', lw=1)
    
    if res['idx_lock'] not in (None, 0):
        axes[3].axvline(Ts[res['idx_lock']], color='green', ls='--', lw=1.5)
        axes[3].annotate('PHASE LOCK (|ω| <= K(R))', xy=(Ts[res['idx_lock']], th[res['idx_lock']]),
                         xytext=(Ts[res['idx_lock']]+5, th[res['idx_lock']]+0.8),
                         arrowprops=dict(arrowstyle='->'))

    # Plot Delta v pulses
    for tp in pulse_times:
        axes[3].axvline(tp, color='red', ls=':', lw=1.5)
        axes[3].annotate('Δv Pulse', xy=(tp, 0), xytext=(tp+2, -2), color='red')

    axes[3].set_xlabel('Time')
    axes[3].legend(loc='upper right')

    # 0. Control Parameter (mu)
    axes[0].plot(Ts, res['mu'], label='μ (Generation Capacity)', color='gray')
    axes[0].axhline(0, color='k', lw=1)
    axes[0].set_ylabel('μ')
    axes[0].legend(loc='upper left')

    fig.suptitle('Love-OS: Virtual Accumulation → Phase Lock → Reality Emergence', fontsize=15)
    fig.tight_layout(rect=[0, 0, 1, 0.97])
    plt.show()

# --- GUI WIDGETS ---
T_slider   = FloatSlider(value=200.0, min=50.0, max=400.0, step=5.0, description='T (Time)', layout=Layout(width='250px'))
dt_slider  = FloatSlider(value=0.02,  min=0.005, max=0.05, step=0.005, description='dt', layout=Layout(width='250px'))

omega_slider = FloatSlider(value=0.6, min=-1.5, max=1.5, step=0.05, description='ω (Gravity/Drift)', layout=Layout(width='280px'))
sigma_slider = FloatSlider(value=0.0, min=0.0, max=0.6, step=0.01, description='σ (Noise)', layout=Layout(width='280px'))

mu0_slider  = FloatSlider(value=-0.2, min=-0.6, max=0.4, step=0.02, description='μ0 (Init Cap)', layout=Layout(width='250px'))
ramp_slider = FloatSlider(value=0.004, min=0.0, max=0.02, step=0.001, description='Ramp', layout=Layout(width='250px'))
beta_slider = FloatSlider(value=0.6, min=0.1, max=1.5, step=0.05, description='β (Sat.)', layout=Layout(width='250px'))
gamma_slider= FloatSlider(value=0.3, min=0.0, max=1.0, step=0.02, description='γ (Coupling)', layout=Layout(width='250px'))

K0_slider  = FloatSlider(value=0.5, min=0.0, max=2.0, step=0.05, description='K0 (Love Gain)', layout=Layout(width='250px'))
Rc_slider  = FloatSlider(value=0.9, min=0.2, max=2.0, step=0.05, description='Rc (Threshold)', layout=Layout(width='250px'))
c_slider   = FloatSlider(value=0.8, min=0.0, max=2.0, step=0.05, description='c (Translation)', layout=Layout(width='250px'))

phi_slider = FloatSlider(value=np.pi/3, min=0.0, max=np.pi, step=np.pi/18, description='ϕ (Δv Angle)', layout=Layout(width='300px'))
tp_slider  = FloatSlider(value=60.0, min=0.0, max=400.0, step=1.0, description='t_pulse', layout=Layout(width='300px'))

btn_add    = Button(description='Inject Δv', button_style='warning', layout=Layout(width='120px'))
btn_clear  = Button(description='Clear Pulses', button_style='info', layout=Layout(width='120px'))
btn_run    = Button(description='Run Simulation ▶', button_style='success', layout=Layout(width='200px', height='40px'))

out = Output()
info = HTML('<b>Injected Δv Pulses (t):</b> None')

pulse_times = []

def on_add_clicked(_):
    t = float(tp_slider.value)
    if t not in pulse_times:
        pulse_times.append(t)
        pulse_times.sort()
    info.value = '<b>Injected Δv Pulses (t):</b> ' + (', '.join(f'{x:.1f}' for x in pulse_times) if pulse_times else 'None')

def on_clear_clicked(_):
    pulse_times.clear()
    info.value = '<b>Injected Δv Pulses (t):</b> None'

def on_run_clicked(_):
    with out:
        clear_output(wait=True)
        res = simulate_love_os(
            T=T_slider.value, dt=dt_slider.value,
            omega=omega_slider.value, mu0=mu0_slider.value, ramp=ramp_slider.value,
            beta=beta_slider.value, gamma=gamma_slider.value,
            theta0=np.pi, K0=K0_slider.value,
            alpha=1.0, Rc=Rc_slider.value, b=1.0, c=c_slider.value,
            R0=0.05, th0=0.0, X0=0.0,
            sigma=sigma_slider.value,
            pulse_times=pulse_times, pulse_phi=phi_slider.value
        )
        plot_all(res, Rc=Rc_slider.value, omega=omega_slider.value, pulse_times=pulse_times)

btn_add.on_click(on_add_clicked)
btn_clear.on_click(on_clear_clicked)
btn_run.on_click(on_run_clicked)

# Layout Setup
controls_left = VBox([
    HBox([T_slider, dt_slider]),
    HBox([omega_slider, sigma_slider]),
    HBox([mu0_slider, ramp_slider]),
    HBox([K0_slider, Rc_slider]),
    HBox([beta_slider, gamma_slider]),
    HBox([c_slider])
])

controls_right = VBox([
    HTML('<b>Manual Override (Phase Correction)</b>'),
    HBox([phi_slider]),
    HBox([tp_slider]),
    HBox([btn_add, btn_clear]),
    info,
    HTML('<hr>'),
    HBox([btn_run])
])

ui = HBox([controls_left, controls_right])

display(ui)
display(out)
